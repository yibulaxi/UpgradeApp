<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    Set Margin Here -->
    <item
        android:bottom="10dp"
        android:left="20dp"
        android:right="20dp"
        android:top="30dp">

        <!-- Insert your shape here: -->
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightContainerSnackbarSolid" />

            <!-- Padding for inner text-->
            <padding
                android:bottom="0dp"
                android:left="25dp"
                android:right="16dp"
                android:top="0dp" />
            <corners android:radius="5dp" />

        </shape>
    </item>
</layer-list>