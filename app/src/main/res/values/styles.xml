<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AuthUITheme" parent="AppTheme">
        <item name="colorPrimary">#A1AACA</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorBlack</item>



        <!--        <item name="android:buttonStyle">@style/buttonStyle</item>-->

    </style>

    <style name="roundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>


    <style name="buttonStyle" parent="MaterialTextButton">
        <item name="android:textColor">@color/colorPrimaryRed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/Text16.Light</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <style name="SpinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Text14.Medium</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:showDividers">none</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="Text16.Medium.Primary" />

