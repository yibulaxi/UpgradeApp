<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="ru.get.better.ui.diary.adapter.viewpager.HabitsRealizationViewHolder.Handler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:animateLayoutChanges="true"
            android:layout_width="120dp"
            android:layout_marginVertical="3dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="2dp"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--    android:backgroundTint="@color/colorItemHabitRealizationBackgroundTint"-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text"
                style="@style/Text12.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
            <!--android:textColor="@color/colorItemHabitRealizationTextText"-->
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>