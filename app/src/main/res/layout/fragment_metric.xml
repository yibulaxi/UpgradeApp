<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.velkonost.upgrade.ui.HomeViewModel" />

        <variable
            name="handler"
            type="com.velkonost.upgrade.ui.metric.MetricFragment.Handler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.main.MainActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.RadarChart
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/radarChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

            <com.alanvan.segmented_control.SegmentedControlGroup
                android:id="@+id/metricStateControlGroup"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                app:customSliderColor="@color/colorPurple"
                app:customDividerColor="@color/colorLightGray"
                app:customShadowColor="@color/colorLightGray"
                android:backgroundTint="@color/colorLightGray"
                style="@style/Text10.Light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.alanvan.segmented_control.SegmentedControlButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:lines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    style="@style/Text10.Light"
                    android:letterSpacing="0.2"
                    android:id="@+id/wheelState"
                    android:text="Колесо"/>

                <com.alanvan.segmented_control.SegmentedControlButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:id="@+id/listState"
                    style="@style/Text10.Light"
                    android:letterSpacing="0.2"
                    android:text="Список"/>

            </com.alanvan.segmented_control.SegmentedControlGroup>


            <com.alanvan.segmented_control.SegmentedControlGroup
                android:id="@+id/radarStateControlGroup"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="72dp"
                app:customSliderColor="@color/colorBlueLight"
                app:customDividerColor="@color/colorWhite"
                app:customShadowColor="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                style="@style/Text10.Light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.alanvan.segmented_control.SegmentedControlButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:lines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    style="@style/Text10.Light"
                    android:letterSpacing="0.2"
                    android:id="@+id/currentState"
                    android:text="Текущее"/>

                <com.alanvan.segmented_control.SegmentedControlButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:id="@+id/startState"
                    style="@style/Text10.Light"
                    android:letterSpacing="0.2"
                    android:text="Начальное"/>

            </com.alanvan.segmented_control.SegmentedControlGroup>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/list"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/metricStateControlGroup">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/listData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/diaryBlock"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/diaryAmount"
                            style="@style/Text20.Medium"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Text14.Light"
                            android:textColor="@color/colorGray"
                            android:text="записей"
                            android:letterSpacing="0.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/averageBlock"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/averageAmount"
                            style="@style/Text20.Medium"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Text14.Light"
                            android:textColor="@color/colorGray"
                            android:text="средний балл"
                            android:letterSpacing="0.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/daysBlock"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/daysAmount"
                            style="@style/Text20.Medium"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Text14.Light"
                            android:textColor="@color/colorGray"
                            android:text="дней"
                            android:letterSpacing="0.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="56dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/info"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_info"
                android:onClick="@{handler::onInfoClicked}"
                android:tint="@color/colorGray"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/bottom_navigation_bar_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>