<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.velkonost.upgrade.model.Interest" />

        <variable
            name="handler"
            type="com.velkonost.upgrade.ui.diary.adapter.viewpager.NotesPagerViewHolder.Handler" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/icon"
            android:src="@drawable/chill_logo"
            app:layout_constraintBottom_toBottomOf="@id/amount"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date"
            style="@style/Text12.Light"
            android:gravity="end"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            android:textColor="@color/colorText"
            android:layout_width="0dp"
            android:letterSpacing="0.1"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/amount"
            style="@style/Text12.Light"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingVertical="2dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/amount"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlueLight"/>
       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/icon"
           app:layout_constraintBottom_toBottomOf="parent">
           <TextView
               android:id="@+id/text"
               android:paddingTop="30dp"
               style="@style/Text16.Light"
               android:letterSpacing="0.1"
               android:textColor="@color/colorText"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </androidx.core.widget.NestedScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>