<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addInterestContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.get.better.ui.view.CustomWheelPickerView
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/interestName"
        style="@style/Text14.Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:gravity="start"
        android:imeOptions="actionNext"
        android:letterSpacing="0.1"
        android:maxLength="15"
        android:inputType="textShortMessage"
        android:maxLines="1"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/interestDescription"
        style="@style/Text14.Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:gravity="start"
        android:letterSpacing="0.1"
        android:imeOptions="actionNext"
        android:maxLength="140"
        android:singleLine="false"
        android:minHeight="@dimen/list_item_double_line"
        android:inputType="textMultiLine"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/interestName" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/interestInitialValue"
        style="@style/Text14.Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:gravity="start"
        android:imeOptions="actionDone"
        android:letterSpacing="0.1"
        android:maxLength="15"

        android:inputType="numberDecimal|numberSigned"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/interestDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>